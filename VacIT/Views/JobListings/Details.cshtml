@model JobListing

@{
    ViewData["Title"] = "Details";
}


<div class="detail-top">
    <h5>
        <a asp-action="Index">Terug naar overzicht</a>
    </h5>
</div>

<div class="test-container container-fluid">
    <div class="row">
        <div class="detail-left col-3">
            <div class="application-logo row">
                <img src=@Url.Content(Model.LogoURL) alt="Application Logo" />
            </div>
            <div class="employer-logo row">
                <img src=@Url.Content(Model.Employer.LogoURL) alt="Employer Logo" />
            </div>

        </div>
        <div class="detail-right col-9">
            <h4>@Html.DisplayFor(model => model.Date) - <a asp-action="Edit" asp-route-id="@Model?.Id">Bewerken</a></h4>
            <h1>@Model.Name</h1>
            <h3>@Model.Level - @Model.Residence</h3>
            <p>@Model.Description</p>

            <br />
            <a href="#"><h2>Solliciteer Direct!</h2></a>
            <br />

            <h4>Meer Vavatures van @Model.Employer.Name</h4>
            <div class="row">
                <div class="col-3">
                    <p><strong>DATUM</strong></p>
                </div>
                <div class="col-6">
                    <p><strong>VACATURE</strong></p>
                </div>
                <div class="col-3">
                    <p><strong>NIVEU</strong></p>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <p>@Model.Employer.JobListings</p>
                </div>
                <div class="col-6">
                    <p></p>
                </div>
                <div class="col-3">
                    <p></p>
                </div>
            </div>
        </div>
    </div>
</div>



